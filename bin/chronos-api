#!/usr/bin/env python

"""
Chronos API Server
"""

import gettext
import os
import sys

# If ../glance/__init__.py exists, add ../ to Python search path, so that
# it will override what happens to be installed in /usr/(local/)lib/python...
possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
    os.pardir,
    os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'chronos', '__init__.py')):
    sys.path.insert(0, possible_topdir)

gettext.install('chronos', unicode=1)

from chronos.common import config
from chronos.openstack.common.wsgi import run_server

def fail(returncode, e):
    sys.stderr.write("ERROR: %s\n" % e)
    sys.exit(returncode)

if __name__ == '__main__':
    try:
        config.parse_args()

        run_server(config.load_paste_app(), 8080)
    except RuntimeError, e:
        fail(1, e)